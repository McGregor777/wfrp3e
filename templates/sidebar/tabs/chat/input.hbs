<form class="chat-form">
	{{!-- Jump to Bottom --}}
	<button type="button"
			class="ui-control icon fa-solid fa-arrow-down jump-to-bottom"
			data-tooltip
			aria-label="{{localize 'CHAT.JumpToBottom'}}"
			data-action="jumpToBottom"
			{{#if isAtBottom}}hidden{{/if}}></button>

	<button type="button"
			class="ui-control"
			data-tooltip
			aria-label="{{localize 'ROLL.NAMES.freeCheck'}}"
			data-action="rollFreeCheck">
		<img src="systems/wfrp3e/assets/icons/dice/characteristic_onesuccess.webp"
			 alt="{{localize 'ROLL.NAMES.freeCheck'}}"/>
	</button>
</form>
