<div class="item money row" data-item-id="{{money._id}}">
	<div class="content">
		<a class="money-name item-name-link">{{money.name}}</a>

		<hr />

		<span class="money-value">{{money.system.value}}</span>

		<hr />

		<span class="quantity quantity-link">{{money.system.quantity}}</span>

		<hr />

		<span class="encumbrance">â€”</span>

		<hr />

		<div class="buttons">
			<a class="item-expand-link" data-tooltip="{{localize 'APPLICATION.BUTTON.Expand'}}">
				<span class="fas fa-chevron-down"></span>
			</a>
			
			{{#>if @root.document.isOwner}}
				<a class="item-edit-link" data-tooltip="{{localize 'APPLICATION.TITLE.EditItem'}}">
					<span class="fas fa-pen-to-square"></span>
				</a>

				<a class="item-delete-link" data-tooltip="{{localize 'APPLICATION.TITLE.DeleteItem'}}">
					<span class="fas fa-trash"></span>
				</a>
			{{/if}}
		</div>
	</div>
</div>