<div class="attribute {{class}}">
	{{#if maxDataPath}}<span class="attribute-title">{{localize title}}</span>{{/if}}

	{{#if maxDataPath}}
		<div class="attribute-input-container">
			<label class="attribute-label">
				{{localize maxTitle}}

				<input class="attribute-input"
				       name="{{maxDataPath}}"
				       value="{{max}}"
				       type="number"
				       placeholder="{{localize maxTitle}}" />
			</label>
		</div>
	{{/if}}

	<div class="attribute-input-container">
		<label class="attribute-label">
			{{#if maxDataPath}}
				{{localize 'CHARACTER.Current'}}
			{{else}}
				{{localize title}}
			{{/if}}

			<input class="attribute-input"
			       name="{{valueDataPath}}"
			       value="{{value}}"
			       type="number"
			       placeholder="{{#if maxDataPath}}{{localize 'CHARACTER.Current'}}{{else}}{{localize title}}{{/if}}" />
		</label>
	</div>
</div>