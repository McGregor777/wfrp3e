<div>
	<label class="ability-track-editor-segment{{#if value.trigger}} trigger{{/if}}">
		<input name="system.specialAbilities.{{specialAbilityIndex}}.values.{{index}}.content"
		       value="{{value.content}}"
		       type="text"
		       data-tooltip="{{localize 'GROUP.SPECIALABILITY.Content'}}" />
	</label>

	<input class="ability-track-editor-trigger"
	       name="system.specialAbilities.{{specialAbilityIndex}}.values.{{index}}.trigger"
	       type="checkbox"
	       data-tooltip="{{localize 'GROUP.SPECIALABILITY.Trigger'}}"
		{{#if value.trigger}} checked{{/if}} />
</div>