<div class="roll-effects {{#if (or disabled outcome)}}disabled{{/if}}">
	<h5>{{localize "ROLL.availableEffects"}}</h5>

	<table>
		<tbody>
			{{#if enrichment.special}}
				<tr><td>{{{stripTags enrichment.special 'p'}}}</td></tr>
			{{/if}}

			{{#if enrichment.uniqueEffect}}
				<tr><td>{{{stripTags enrichment.uniqueEffect 'p'}}}</td></tr>
			{{/if}}

			{{#each symbols as |symbol sym|}}
				{{#with (lookup ../effects sym) as |effects|}}
					{{#if effects}}
						<tr><td>
							{{#each effects as |effect ef|}}
								<a {{#if effect.active}}class="active"{{/if}}
								   data-action="toggleEffect"
								   data-symbol="{{sym}}"
								   data-index="{{@index}}">
									{{#for 0 effect.symbolAmount 1}}
										{{#unless (and (or (eq sym "delay") (eq sym "exertion")) (gt this 0))}}
											<span class="wfrp3e-font symbol {{symbol.cssClass}}"></span>
										{{else}}
											<span class="wfrp3e-font symbol {{@root.symbols.bane.cssClass}}"></span>
										{{/unless}}
									{{/for}}

									{{{stripTags effect.enrichment.description 'p'}}}
								</a>
							{{/each}}
						</td></tr>
					{{/if}}
				{{/with}}
			{{/each}}
		</tbody>
	</table>
</div>