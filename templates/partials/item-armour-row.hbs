<div class="item armour row" data-item-id="{{armour._id}}">
	<div class="content">
		<span class="armour-name">
			<a class="item-name-link">{{armour.name}}</a>
		</span>

		<hr />

		<span class="armour-defence-value">
			{{armour.system.defenceValue}}
		</span>

		<hr />

		<span class="armour-soak-value">
            {{armour.system.soakValue}}
        </span>

		<hr />

		<span class="encumbrance">
            {{armour.system.encumbrance}}
        </span>

		<hr />

		<div class="buttons">
			<a class="item-expand-link" title="{{localize 'APPLICATION.BUTTON.Expand'}}">
				<span class="fas fa-chevron-down"></span>
			</a>
			
			{{#>if @root.document.isOwner}}
				<a class="item-edit-link" title="{{localize 'APPLICATION.TITLE.EditItem'}}">
					<span class="fas fa-pen-to-square"></span>
				</a>

				<a class="item-delete-link" title="{{localize 'APPLICATION.TITLE.DeleteItem'}}">
					<span class="fas fa-trash"></span>
				</a>
			{{/if}}
		</div>
	</div>
</div>