				</div>

				<hr />

				<div class="encumbrance">
					<span>{{localize "TRAPPING.FIELDS.encumbrance.abbreviation"}}</span>
				</div>

				<hr />

				<div class="buttons"></div>
			</div>

			<div class="table-body">
				{{#each money as |money mo|}}
					{{>systems/wfrp3e/templates/applications/sheets/actors/partials/money-row.hbs money=money}}
				{{/each}}
			</div>
		{{/if}}
	</section>
</section>
