<div class="draggable ability item row" data-item-id="{{item._id}}">
	<div class="content">
		<div class="image">
			<a data-action="toggleItemDetails" data-tooltip="{{localize 'Expand'}}">
				<img class="type" src="{{item.img}}" width="40" height="40" />
			</a>
		</div>

		<div class="name">
			<a data-action="toggleItemDetails" data-tooltip="{{localize 'Expand'}}">
				<span>{{item.name}}</span>
			</a>
		</div>

		<div class="recharge-tokens">
			{{#if @root.editable}}
				<a class="recharge-token prevent-context"
				   data-action="adjustRechargeTokens"
				   data-tooltip="{{localize 'ACTOR.ACTIONS.adjustRechargeTokens'}}">
					<img src="systems/wfrp3e/assets/images/token-grey.webp"
						 alt="{{localize 'ABILITY.FIELDS.rechargeTokens.label'}}"
						 height="40" />

					<span class="recharge-token-counter">
						{{{item.system.rechargeTokens}}}
					</span>
				</a>
			{{else}}
				<span class="recharge-token" data-tooltip="{{localize 'ABILITY.FIELDS.rechargeTokens.label'}}">
					<img src="systems/wfrp3e/assets/images/token-grey.webp"
						 alt="{{localize 'ABILITY.FIELDS.rechargeTokens.label'}}"
						 height="40" />

					<span class="recharge-token-counter">
						{{{item.system.rechargeTokens}}}
					</span>
				</span>
			{{/if}}
		</div>

		<div class="buttons">
			{{#if @root.editable}}
				{{#each item.effects as |effect|}}
					{{#if (eq effect.system.macro.type "manualTrigger")}}
						<a data-action="useItem"
						   data-effect-uuid="{{effect.uuid}}"
						   data-tooltip="{{localize 'ABILITY.ACTIONS.trigger'}}" >
							<span class="fas fa-dice-d20"></span>
						</a>
					{{/if}}
				{{/each}}
			{{/if}}

			{{#if @root.editable}}
				<a class="context-menu">
					<span class="fas fa-ellipsis-vertical"></span>
				</a>
			{{else}}
				<a data-action="toggleItemDetails" data-tooltip="{{localize 'Expand'}}">
					<span class="fas fa-chevron-down"></span>
				</a>
			{{/if}}
		</div>
	</div>
</div>
