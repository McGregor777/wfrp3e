<div class="draggable armour item row" data-item-id="{{armour._id}}">
	<div class="content">
		<div class="image">
			<a data-action="toggleItemDetails" data-tooltip="{{localize 'Expand'}}">
				<img class="type" src="{{armour.img}}" alt="{{armour.name}}" width="40" height="40" />
			</a>
		</div>

		<div class="name">
			<a data-action="toggleItemDetails" data-tooltip="{{localize 'Expand'}}">
				<span>{{armour.name}}</span>
			</a>
		</div>

		<hr />

		<div class="defence-value">
			<span>{{armour.system.defenceValue}}</span>
		</div>

		<hr />

		<div class="soak-value">
			<span>{{armour.system.soakValue}}</span>
		</div>

		<hr />

		<div class="encumbrance">
			<span>{{armour.system.encumbrance}}</span>
		</div>

		<hr />

		<div class="buttons">
			{{#if @root.editable}}
				<a class="context-menu">
					<span class="fas fa-ellipsis-vertical"></span>
				</a>
			{{else}}
				<a data-action="toggleItemDetails" data-tooltip="{{localize 'Expand'}}">
					<span class="fas fa-chevron-down"></span>
				</a>
			{{/if}}
		</div>
	</div>
</div>
