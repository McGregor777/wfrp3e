<fieldset class="attribute {{attribute.name}}">
	{{#if attribute.fields}}
		<legend>{{localize attribute.label}}</legend>

		{{#each attribute.fields}}
			{{formGroup this value=(getProperty @root.document this.fieldPath) rootId=@root.rootId}}
		{{/each}}
	{{else}}
		{{formGroup attribute value=(getProperty document attribute.fieldPath) rootId=rootId}}
	{{/if}}
</fieldset>
