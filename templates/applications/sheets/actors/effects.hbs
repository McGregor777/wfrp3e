<section class="tab {{tab.id}} {{tab.cssClass}}" data-tab="{{tab.id}}" data-group="{{tab.group}}">
	<a data-action="addActiveEffect">
		<span class="fa-solid fa-plus"></span>
		{{localize "ACTOR.ACTIONS.addActiveEffect"}}
	</a>

	<div class="effect table">
		<div class="table-header">
			<div class="image"></div>

			<div class="name">
				{{localize "Name"}}
			</div>

			<div class="source">
				{{localize "Source"}}
			</div>

			<div class="duration">
				{{localize "Duration"}}
			</div>

			<div class="active"></div>

			<div class="buttons"></div>
		</div>

		<div class="table-body">
			{{#each effects as |effect eff|}}
				<div class="active-effect row" data-effect-uuid="{{effect.uuid}}">
					<div class="content">
						<div class="image">
							<a data-action="editEffect" data-tooltip="{{localize 'ACTOR.ACTIONS.editEffect'}}">
								<img src="{{effect.img}}" alt="{{effect.name}}" width="40" height="40" />
							</a>
						</div>

						<div class="name">
							<a data-action="editEffect" data-tooltip="{{localize 'ACTOR.ACTIONS.editEffect'}}">
								{{effect.name}}
							</a>
						</div>

						<div class="source" data-item-id="{{effect.parent._id}}">
							<a data-action="editItem" data-tooltip="{{localize 'ACTOR.ACTIONS.editItem'}}">
								{{effect.parent.name}}
							</a>
						</div>

						<div class="duration">
							{{#if effect.duration.duration}}
								{{effect.duration.duration}}
							{{else}}
								â€”
							{{/if}}
						</div>

						<div class="active">
							{{#if @root.editable}}
								<a class="fa-solid fa-circle{{#unless effect.disabled}}-check{{/unless}}"
								   data-action="toggleActiveEffect"
								   data-tooltip="{{localize 'ACTOR.ACTIONS.toggleActiveEffect'}}"></a>
							{{else}}
								<span class="fa-solid fa-circle{{#unless effect.disabled}}-check{{/unless}}"
									  data-action="toggleActiveEffect"></span>
							{{/if}}
						</div>

						<div class="buttons">
							{{#if @root.editable}}
								<a class="context-menu">
									<span class="fas fa-ellipsis-vertical"></span>
								</a>
							{{/if}}
						</div>
					</div>
				</div>
			{{/each}}
		</div>
	</div>

	<section class="item-container">
		{{#each items as |item i|}}
			{{>(concat "systems/wfrp3e/templates/applications/partials/" item.type "-card.hbs") item=item}}
		{{/each}}
	</section>
</section>
