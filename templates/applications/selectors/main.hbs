<section>
	<section class="item-container">
		{{#each items as |item i|}}
			<label {{#if (in item.uuid @root.selection)}}class="active"{{/if}}>
				{{>(concat "systems/wfrp3e/templates/applications/partials/" item.type "-card.hbs")
						currentStance="conservative"
						item=item}}

				<input name="selection" value="{{item.uuid}}" type="radio"
					{{#if (in item.uuid @root.selection)}}checked{{/if}}/>
			</label>
		{{/each}}
	</section>
</section>