<div class="item ability card" data-uuid="{{ability.uuid}}">
	{{#if @root.editable}}
		<a class="name" data-action="editDocument" data-tooltip="{{localize 'ACTOR.ACTIONS.editDocument'}}">
			{{ability.name}}
		</a>
	{{else}}
		<span>{{ability.name}}</span>
	{{/if}}

	<div class="description">
		{{{ability.system.description}}}
	</div>

	<div class="bottom-line">
		{{#if @root.editable}}
			<a class="recharge-token"
			   data-action="adjustRechargeTokens"
			   data-tooltip="{{localize 'ACTOR.ACTIONS.adjustRechargeTokens'}}">
				<img src="systems/wfrp3e/assets/images/token-grey.webp"
					 alt="{{localize 'ABILITY.FIELDS.rechargeTokens.label'}}" />

				<span class="recharge-token-counter">
					{{{talent.system.rechargeTokens}}}
				</span>
			</a>

			{{#each ability.effects as |effect ef|}}
				{{#if (sameAs effect.system.type "onTrigger")}}
					<a data-action="useDocument"
					   data-effect-uuid="{{effect.uuid}}"
					   data-tooltip="{{localize 'ABILITY.ACTIONS.trigger'}}" >
						{{localize "ABILITY.ACTIONS.trigger"}}
					</a>
				{{/if}}
			{{/each}}

			<div>
				<a data-action="editDocument" data-tooltip="{{localize 'ACTOR.ACTIONS.editDocument'}}">
					<span class="fas fa-pen-to-square"></span>
				</a>

				<a data-action="deleteDocument" data-tooltip="{{localize 'Delete'}}">
					<span class="fas fa-trash"></span>
				</a>
			</div>
		{{else}}
			<span class="recharge-token" data-tooltip="{{localize 'ABILITY.FIELDS.rechargeTokens.label'}}">
				<img src="systems/wfrp3e/assets/images/token-grey.webp"
					 alt="{{localize 'ABILITY.FIELDS.rechargeTokens.label'}}" />

				<span class="recharge-token-counter">
					{{{talent.system.rechargeTokens}}}
				</span>
			</span>
		{{/if}}
	</div>
</div>