<div class="item talent row {{talent.system.type}}" data-uuid="{{talent.uuid}}">
	<div class="content">
		<div class="image">
			{{#if @root.editable}}
				<a data-action="editDocument" data-tooltip="{{localize 'ACTOR.ACTIONS.editDocument'}}">
					<img class="type" src="{{talent.img}}" width="40" height="40" />
				</a>
			{{else}}
				<span><img class="type" src="{{talent.img}}" width="40" height="40" /></span>
			{{/if}}
		</div>

		<div class="name">
			{{#if @root.editable}}
				<a data-action="editDocument" data-tooltip="{{localize 'ACTOR.ACTIONS.editDocument'}}">
					<span>{{talent.name}}</span>
				</a>
			{{else}}
				<span>{{talent.name}}</span>
			{{/if}}
		</div>

		<div class="type">
			{{localize (lookup @root.types talent.system.type)}}
		</div>

		<div class="recharge-tokens">
			{{#if @root.editable}}
				<a class="recharge-token"
				   data-action="adjustRechargeTokens"
				   data-tooltip="{{localize 'ACTOR.ACTIONS.adjustRechargeTokens'}}">
					<img src="systems/wfrp3e/assets/images/token-grey.webp"
						 alt="{{localize 'TALENT.FIELDS.rechargeTokens.label'}}"
						 height="40" />

					<span class="recharge-token-counter">
						{{{talent.system.rechargeTokens}}}
					</span>
				</a>
			{{else}}
				<span class="recharge-token" data-tooltip="{{localize 'TALENT.FIELDS.rechargeTokens.label'}}">
					<img src="systems/wfrp3e/assets/images/token-grey.webp"
						 alt="{{localize 'TALENT.FIELDS.rechargeTokens.label'}}"
						 height="40" />

					<span class="recharge-token-counter">
						{{{talent.system.rechargeTokens}}}
					</span>
				</span>
			{{/if}}
		</div>

		<div class="buttons">
			{{#if @root.editable}}
				{{#each talent.effects as |effect|}}
					{{#if (sameAs effect.system.type "onTrigger")}}
						<a data-action="useDocument"
						   data-effect-uuid="{{effect.uuid}}"
						   data-tooltip="{{localize 'TALENT.ACTIONS.trigger'}}" >
							<span class="fas fa-dice-d20"></span>
						</a>
					{{/if}}
				{{/each}}
			{{/if}}

			{{#if @root.editable}}
				<a class="context-menu">
					<span class="fas fa-ellipsis-vertical"></span>
				</a>
			{{else}}
				<a data-action="expandDocument" data-tooltip="{{localize 'Expand'}}">
					<span class="fas fa-chevron-down"></span>
				</a>
			{{/if}}
		</div>
	</div>
</div>