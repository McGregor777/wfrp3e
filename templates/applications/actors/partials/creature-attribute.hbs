<div class="form-group slim stacked attribute {{attribute.name}}">
	<label class="attribute-title"
		   for="{{concat @root.rootId "-" (getProperty @root.fields attribute.fields.value.fieldPath)}}">
		{{localize attribute.label}}
	</label>

	<div class="form-fields">
		{{formInput attribute.fields.value
					value=(getProperty @root.source attribute.fields.value.fieldPath)
					id=(concat @root.rootId "-" (getProperty @root.source attribute.fields.value.fieldPath))}}

		<span>/</span>

		{{formInput attribute.fields.max
					value=(getProperty @root.source attribute.fields.max.fieldPath)
					id=(concat @root.rootId "-" (getProperty @root.fields attribute.fields.max.fieldPath))}}
	</div>
</div>