<div class="item money row" data-uuid="{{money.uuid}}">
	<div class="content">
		<div class="image">
			{{#if @root.editable}}
				<a data-action="editDocument" data-tooltip="{{localize 'ACTOR.ACTIONS.editDocument'}}">
					<img class="type" src="{{money.img}}" alt="{{money.name}}" width="40" height="40" />
				</a>
			{{else}}
				<span><img class="type" src="{{money.img}}" alt="{{money.name}}" width="40" height="40" /></span>
			{{/if}}
		</div>

		<div class="name">
			{{#if @root.editable}}
				<a data-action="editDocument" data-tooltip="{{localize 'ACTOR.ACTIONS.editDocument'}}">
					<span>{{money.name}}</span>
				</a>
			{{else}}
				<span>{{money.name}}</span>
			{{/if}}
		</div>

		<hr />

		<div class="value">
			<span>{{money.system.value}}</span>
		</div>

		<hr />

		<div class="quantity">
			<span>{{money.system.quantity}}</span>
		</div>

		<hr />

		<div class="encumbrance">
			<span>â€”</span>
		</div>

		<hr />

		<div class="buttons">
			{{#if @root.editable}}
				<a class="context-menu">
					<span class="fas fa-ellipsis-vertical"></span>
				</a>
			{{else}}
				<a data-action="expandDocument" data-tooltip="{{localize 'Expand'}}">
					<span class="fas fa-chevron-down"></span>
				</a>
			{{/if}}
		</div>
	</div>
</div>