<form class="{{cssClass}}" autocomplete="off">
	<header class="sheet-header">
		<img class="actor-img" src="{{item.img}}" data-edit="img" data-tooltip="{{item.name}}" />

		<h1>
			<label>
				<input name="name" type="text" value="{{item.name}}" placeholder="{{localize 'Name'}}"/>
			</label>
		</h1>
	</header>

	<section class="sheet-body">
		<label class="form-label">
			{{localize 'SKILL.FIELDS.characteristic.label'}}

			<select name="system.characteristic">
				{{selectOptions characteristics selected=item.system.characteristic labelAttr="name" localize=true}}
			</select>
		</label>

		<label>
			{{localize "SKILL.FIELDS.advanced.label"}}

			<input name="system.advanced" type="checkbox"{{#if item.system.advanced}} checked{{/if}} />
		</label>

		<div class="editor-container">
			{{editor item.system.description target="system.description" button=true owner=owner editable=editable}}
		</div>

		{{#if item.parent}}
			<label class="form-label">
				{{localize "SKILL.FIELDS.specialisations.label"}}
				<input name="system.specialisations" type="text" value="{{item.system.specialisations}}" />
			</label>
		{{/if}}
	</section>
</form>