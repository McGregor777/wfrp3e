<fieldset class="trapping-cost inline">
	<legend>{{localize "TRAPPING.FIELDS.cost.label"}}</legend>

	<div class="form-group slim brass">
		<label for="{{concat rootId "-" fields.cost.fields.brass.fieldPath}}">
			{{localize "TRAPPING.FIELDS.cost.brass.label"}}
		</label>

		<div class="form-fields">
			{{formInput fields.cost.fields.brass
						value=system.cost.brass
						id=(concat rootId "-" fields.cost.fields.brass.fieldPath)}}
			<span>{{localize "TRAPPING.FIELDS.cost.brass.abbreviation"}}</span>
		</div>
	</div>

	<div class="form-group slim silver">
		<label for="{{concat rootId "-" fields.cost.fields.silver.fieldPath}}">
			{{localize "TRAPPING.FIELDS.cost.silver.label"}}
		</label>

		<div class="form-fields">
			{{formInput fields.cost.fields.silver
						value=system.cost.silver
						id=(concat rootId "-" fields.cost.fields.silver.fieldPath)}}
			<span>{{localize "TRAPPING.FIELDS.cost.silver.abbreviation"}}</span>
		</div>
	</div>

	<div class="form-group slim gold">
		<label for="{{concat rootId "-" fields.cost.fields.gold.fieldPath}}">
			{{localize "TRAPPING.FIELDS.cost.gold.label"}}
		</label>

		<div class="form-fields">
			{{formInput fields.cost.fields.gold
						value=system.cost.gold
						id=(concat rootId "-" fields.cost.fields.gold.fieldPath)}}
			<span>{{localize "TRAPPING.FIELDS.cost.gold.abbreviation"}}</span>
		</div>
	</div>
</fieldset>

<fieldset class="inline">
	{{formGroup fields.encumbrance value=system.encumbrance classes="slim" rootId=rootId}}

	{{formGroup fields.rarity value=system.rarity classes="expanded" rootId=rootId localize=true}}
</fieldset>