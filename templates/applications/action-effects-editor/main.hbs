<section class="tab {{tab.id}} {{tab.cssClass}}" data-tab="{{tab.id}}" data-group="{{tab.group}}">
	<div class="form-group slim">
		<label>{{localize "ACTION.FIELDS.effects.symbolType.label"}}</label>

		<div class="form-fields">
			<select name="symbol" {{#if index}}disabled{{/if}}>
				{{selectOptions symbols selected=symbol labelAttr="name" localize=true}}
			</select>
		</div>
	</div>

	{{formGroup fields.symbolAmount value=effect.symbolAmount classes="slim" localize=true}}

	{{formGroup fields.description value=effect.description localize=true}}
</section>