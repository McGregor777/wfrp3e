<section class="tab {{tab.id}} {{tab.cssClass}}" data-tab="{{tab.id}}" data-group="{{tab.group}}">
	{{formGroup fields.script
				value=effect.script
				localize=true
				rows=8}}

	{{formGroup fields.immediate value=effect.immediate localize=true}}

	<div class="reverse-script-container" {{#unless effect.immediate}}style="display: none;"{{/unless}}>
		{{formGroup fields.reverseScript
					value=effect.reverseScript
					localize=true
					rows=8}}
	</div>
</section>