<section class="tab {{tab.id}} {{tab.cssClass}}" data-tab="{{tab.id}}" data-group="{{tab.group}}">
	<div class="dice-pool-table">
		{{#each dice as |die d|}}
			<div class="pool-container" data-action="adjustAmount" data-type="dice" data-subtype="{{d}}"
				 data-tooltip="{{CHECKBUILDER.ACTIONS.adjustAmount}}">
				<label class="image" for="{{concat @root.rootId "-dice." d}}">
					<img class="special-die" src="{{die.icon}}"
						 width="43"
						 height="43"
						 alt="{{capitalize d}} die" />
				</label>

				<input id="{{concat @root.rootId "-dice." d}}"
					   name="dice.{{d}}"
					   type="number"
					   min="0"
					   value="{{lookup @root.dicePool.dice d}}"/>

				<label for="{{concat @root.rootId "-dice." d}}">
					{{localize die.plural}}
				</label>
			</div>
		{{/each}}
	</div>

	<div class="convert-buttons">
		<button data-action="convertCharacteristicDie" data-type="conservative">
			{{localize "CHECKBUILDER.ACTIONS.convertConservative"}}
		</button>

		<button data-action="convertCharacteristicDie" data-type="reckless">
			{{localize "CHECKBUILDER.ACTIONS.convertReckless"}}
		</button>
	</div>

